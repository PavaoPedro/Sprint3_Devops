@model MAI.Models.Regiao;

@{
    ViewData["Title"] = "Details";
}

<h1>@Html.DisplayFor(model => model.RegiaoNome)</h1>


<div>
    <a asp-action="Edit" asp-route-id="@Model?.IdRegiao">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>


@if (Model.Cidade is null)
{
    <p>
        <a asp-controller="Cidade" asp-action="Create" asp-route-id="@Model?.IdCidade">Cadastrar Cidade</a>
    </p>
}
else
{
    <p>
        <a asp-controller="Cidade" asp-action="Edit" asp-route-id="@Model?.IdCidade">Alterar Cidade</a>
    </p>

    <h3>Cidade</h3>

    @Html.DisplayFor(model => model.Cidade.CidadeNome)

}

